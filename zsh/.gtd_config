# ============================================================================
# Modular Configuration Files
# ============================================================================
# Load modular config files using the loader function
# This provides better organization and maintainability

# Find and load the config loader
LOADER_SCRIPT="$HOME/code/dotfiles/zsh/functions/load_gtd_config.sh"
if [[ ! -f "$LOADER_SCRIPT" ]]; then
  LOADER_SCRIPT="$HOME/code/personal/dotfiles/zsh/functions/load_gtd_config.sh"
fi

if [[ -f "$LOADER_SCRIPT" ]]; then
  source "$LOADER_SCRIPT"
else
  # Fallback: Load acronyms directly if loader not found
  GTD_ACRONYMS_FILE="${GTD_ACRONYMS_FILE:-$HOME/code/dotfiles/zsh/.gtd_acronyms}"
  if [[ -f "$GTD_ACRONYMS_FILE" ]]; then
    source "$GTD_ACRONYMS_FILE"
  elif [[ -f "$HOME/code/personal/dotfiles/zsh/.gtd_acronyms" ]]; then
    source "$HOME/code/personal/dotfiles/zsh/.gtd_acronyms"
  elif [[ -f "$HOME/.gtd_acronyms" ]]; then
    source "$HOME/.gtd_acronyms"
  fi
fi

