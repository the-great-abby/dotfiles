      else
        echo ""
        echo "âš ï¸  Could not connect to LM Studio. Make sure it's running at $lm_url"
        [[ -n "$advice_output" ]] && echo "Error details: $advice_output" >&2
      fi
    else
      # Old helper format
      if [[ $exit_code -eq 0 && -n "$advice_output" ]]; then
        echo "$advice_output"
      else
        echo "âš ï¸  Could not connect to LM Studio. Make sure it's running at $lm_url"
        [[ -n "$advice_output" ]] && echo "Error details: $advice_output" >&2
      fi
      echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    fi
  else
    echo "âš ï¸  Helper script not found. Expected at: $HOME/code/personal/dotfiles/zsh/functions/lmstudio_helper.py"
  fi
}

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/abby/.lmstudio/bin"
