#!/bin/bash
# Quick "What should I do now?" - Shows actionable items at a glance

# Source common environment (PATH setup)
COMMON_ENV="$HOME/code/dotfiles/zsh/common_env.sh"
if [[ ! -f "$COMMON_ENV" && -f "$HOME/code/personal/dotfiles/zsh/common_env.sh" ]]; then
  COMMON_ENV="$HOME/code/personal/dotfiles/zsh/common_env.sh"
fi
if [[ -f "$COMMON_ENV" ]]; then
  source "$COMMON_ENV"
fi

# Colors
CYAN='\033[0;36m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BOLD='\033[1m'
NC='\033[0m'

echo ""
echo -e "${BOLD}${CYAN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BOLD}${CYAN}ğŸ¯ What Should You Do Now?${NC}"
echo -e "${CYAN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""

# Inbox count
inbox_count=$(ls -1 ~/Documents/gtd/0-inbox/*.md 2>/dev/null | wc -l | tr -d ' ')
if [[ $inbox_count -gt 0 ]]; then
  echo -e "${YELLOW}ğŸ“¥ Inbox: ${inbox_count} item(s) - ${BOLD}Process first!${NC}"
  echo ""
fi

# Helper function to extract and display tasks
show_tasks() {
  local output="$1"
  local max_tasks="${2:-5}"
  
  if [[ -z "$output" || "$output" == *"No tasks found"* ]]; then
    echo "  (none)"
    return
  fi
  
  # Extract task blocks (each task is [N] followed by details)
  local task_count=0
  local in_task=false
  local task_line=""
  
  while IFS= read -r line; do
    # Start of a new task
    if [[ "$line" =~ ^\[[0-9]+\][[:space:]]+(.+) ]]; then
      if [[ $task_count -ge $max_tasks ]]; then
        break
      fi
      task_line="${BASH_REMATCH[1]}"
      echo -e "  ${GREEN}â€¢${NC} $task_line"
      ((task_count++))
      in_task=true
    elif [[ "$in_task" == "true" && "$line" =~ ^[[:space:]]+Project:[[:space:]]+(.+) ]]; then
      # Show project if available
      echo -e "     ${CYAN}Project:${NC} ${BASH_REMATCH[1]}"
    fi
  done <<< "$output"
  
  if [[ $task_count -eq 0 ]]; then
    echo "  (none)"
  fi
}

# Urgent/Important tasks
echo -e "${BOLD}ğŸ”¥ Urgent & Important Tasks:${NC}"
urgent_output=$(gtd-task list --priority=urgent_important --status=active 2>/dev/null)
show_tasks "$urgent_output" 5
echo ""

# High priority tasks
echo -e "${BOLD}â­ High Priority Tasks:${NC}"
high_priority_output=$(gtd-task list --priority=high --status=active 2>/dev/null)
show_tasks "$high_priority_output" 3
echo ""

# Next actions (context-based)
echo -e "${BOLD}ğŸ’» Computer Tasks (next 3):${NC}"
computer_output=$(gtd-task list --context=computer --status=active 2>/dev/null)
show_tasks "$computer_output" 3
echo ""

# Show a few general active tasks if no high priority tasks found
urgent_count=$(echo "$urgent_output" | grep -cE "^\[[0-9]+\]" || echo "0")
high_count=$(echo "$high_priority_output" | grep -cE "^\[[0-9]+\]" || echo "0")
if [[ $urgent_count -eq 0 && $high_count -eq 0 ]]; then
  echo -e "${BOLD}ğŸ“‹ Active Tasks (next 3):${NC}"
  general_output=$(gtd-task list --status=active 2>/dev/null)
  show_tasks "$general_output" 3
  echo ""
fi

# Habits due
if [[ -d ~/Documents/gtd/habits ]]; then
  due_habits=$(find ~/Documents/gtd/habits -name "*.md" -type f 2>/dev/null | wc -l | tr -d ' ')
  if [[ $due_habits -gt 0 ]]; then
    echo -e "${BOLD}âœ… Habits Due: ${due_habits}${NC}"
    echo ""
  fi
fi

echo -e "${CYAN}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo ""
echo -e "${BOLD}ğŸ’¡ Quick commands:${NC}"
echo -e "  ${GREEN}p${NC}          â†’ Process inbox"
echo -e "  ${GREEN}t${NC}          â†’ List all tasks"
echo -e "  ${GREEN}w${NC}          â†’ Open wizard"
echo ""


